pipeline{
         agent any
            environment{
                         
                         def mvnHOME = tool name: 'maven-3.3.3', type: 'maven'
                         def mvnCMD = "${mvnHOME}/bin/mvn"
                       }
                
          stages{
                stage("git checkout")
                 {
                   steps{
                         git credentialsId: 'github', url: 'https://github.com/lakshmikar23/CI-CD-MavenGit.git'                       }
                       }
 
           stage("maven build")
                   {
                    steps{
                         
                         sh "${mvnCMD} clean package"
                         sh "mv target/*.war target/myweb.war"
                         
                         }
                    }
                    stage("deploy")
                   {
                     steps{
                            sshagent(['web-server']) {
                       sh """
                               scp -o StrictHostKeyChecking=no target/myweb.war  ubuntu@h35.180.55.122:/tomcat/webapps/
                    
                               ssh ubuntu@h35.180.55.122 /tomcat/bin/shutdown.sh
                    
                                ssh ubuntu@h35.180.55.122 /tomcat/bin/startup.sh
                
                         """       
                                   }
                            }
                         }

               }
           }    
   

pipeline{
         agent any
            environment{
                         
                         def mvnHOME = tool name: 'maven-3.3.3', type: 'maven'
                         def mvnCMD = "${mvnHOME}/bin/mvn"
                       }
                
          stages{
                stage("git checkout")
                 {
                   steps{
                         git credentialsId: 'github', url: 'https://github.com/lakshmikar23/CI-CD-MavenGit.git'                       }
                       }
 
           stage("maven build")
                   {
                    steps{
                         
                         sh "${mvnCMD} clean package"
                         
                         }
                    }
               }
           }    
   
